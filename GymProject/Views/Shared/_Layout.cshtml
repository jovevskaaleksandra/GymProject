<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body  background="~/bcc.jpg" style="background-repeat:no-repeat;background-size:cover">
    <div class="navbar navbar-inverse navbar-fixed-top" style="height:100px;background-color:whitesmoke">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/gym.png" width="70" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="font-size:25px;margin-top:7%">@Html.ActionLink("Почетна", "Index", "Home")</li>
                    <li style="font-size:25px;margin-top:7%">@Html.ActionLink("Тренери", "Index", "Treners")</li>
                    <li style="font-size:25px;margin-top:7%">@Html.ActionLink("Контакт", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:whitesmoke">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CROSSFIT Fitness Club</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
